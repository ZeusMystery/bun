    "koffi": "^2.6.3",
    "mmap-utils": "^1.0.0",
    "open-editor": "^4.1.1",
    "semver": "^7.5.4",
    "set-cookie-parser": "^2.6.0",
    "smol-toml": "^1.1.3",
    "supports-color": "^9.4.0",
    "uWebSockets.js": "uNetworking/uWebSockets.js#v20.33.0",
    "which": "^4.0.0",
    "ws": "^8.14.2"
  }
