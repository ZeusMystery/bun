    "@types/set-cookie-parser": "^2.4.5",
    "@types/which": "^3.0.0",
    "@types/ws": "^8.5.8",
    "bun-types": "^1.0.6",
    "copyfiles": "^2.4.1",
    "tsx": "^4.1.0",
    "typings-esm-loader": "^2.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "argon2": "^0.31.2",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.1.1",
    "bun-wasm": "link:bun-wasm",
